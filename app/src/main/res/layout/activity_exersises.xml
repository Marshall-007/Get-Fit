<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Exersises">


    <Button
        android:id="@+id/previous"
        android:layout_width="93dp"
        android:layout_height="49dp"
        android:layout_alignTop="@+id/next"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="168dp"
        android:background="@drawable/button_round"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"

        android:layout_marginStart="40dp"
        android:layout_marginBottom="168dp"
        android:background="@drawable/button_round"
        android:text="Prev"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="372dp"
        android:layout_height="297dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.272"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="311dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/pushup" />

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="277dp"
            android:layout_height="310dp"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/planch" />

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="277dp"
            android:layout_height="310dp"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/rollingplanch" />

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="277dp"
            android:layout_height="310dp"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/leglift" />

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="277dp"
            android:layout_height="310dp"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/situp" />

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="277dp"
            android:layout_height="310dp"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/sitabbs" />

    </ViewFlipper>

    <TextView
        android:id="@+id/txtGym"
        android:layout_width="376dp"
        android:layout_height="82dp"
        android:fontFamily="@font/alegreya"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.354"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.624" />

    <Button
        android:id="@+id/Done"
        android:layout_width="198dp"
        android:layout_height="62dp"
        android:layout_marginTop="118dp"
        android:background="@drawable/button_round"
        android:text="Done "
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtGym"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>